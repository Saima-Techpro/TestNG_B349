<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Parallel Testing" verbose="1"  parallel="methods" thread-count="3">

    <listeners>
        <listener class-name="myapp.utilities.ListenersUtils"></listener>
    </listeners>

    <test name= "Method Level Parallel Testing">
        <classes>
            
            <class name="myapp.tests.topics.Day02_DriverTest"></class>
            <class name="myapp.tests.topics.Day03_CarRentalTest"></class>
            <class name="myapp.tests.dataprovider.Day06_DataProvider2"></class>
            <class name="myapp.tests.smoketests.Day04_OrangeHRM_LoginTestDynamic"></class>

        </classes>
    </test>

</suite>

